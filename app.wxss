}
.scroll-view_H view text{
    width:100%;
    background: #fff;
    color:#6f6f6f;
    display: block;
    height:66rpx;
    line-height: 66rpx;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;

}
.section_gap {
  padding: 0 15px;
}
.scroll-view_H {
  white-space: nowrap;
  font-size: 28rpx;
}
::-webkit-scrollbar {
  width: 0;

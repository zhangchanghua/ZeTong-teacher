<view class="mine-top">
	<view class="header-pic-box" bindtap="login">
		<image src="{{headerUrl}}" class="header-pic" />
		<text>{{userName}}</text>
	</view>
</view>
<view class="mine-list">
	<view class="mine-item mine-item-bg1" bindtap="link1"><text>{{itemText}} ></text></view>
	<view class="mine-item mine-item-bg2" bindtap="linkToEvaluate"><text>我的评价 ></text></view>
	<view class="mine-item mine-item-bg3" bindtap="linkToSalary"><text>我的工资 ></text></view>
	<view class="mine-item mine-item-bg4" bindtap="linkToMsg"><text style="border-bottom: none;">我的消息 ></text></view>
</view>
<view class="sign-out-btn" bindtap="logout">退出登录</view>

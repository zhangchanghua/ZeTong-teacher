/* pages/teacher/educationExperience/educationExperience.wxss */
.experience-top{
	width: 100%;
	height: 100rpx;
	line-height: 100rpx;
	text-align: center;
	font-size: 30rpx;
	color: #7eb229;
	background-color: #fff;
}
.experience-top image{
	width: 40rpx;
	height: 40rpx;
	margin-right: 8rpx;
	vertical-align: middle;
}

.school-list{
	margin-top: 20rpx;
	font-size: 26rpx;
	color: #3c3c3c;
}
.school-row{
	display: flex;
	justify-content: space-around;
	padding: 30rpx 0;
	background-color: #fff;
	border-bottom: 2rpx solid #f5f5f5;
}
.icon-pic{
	height: 39rpx;
	width: 39rpx;
	vertical-align: middle;
}
.key{
	display: block;
	width: 80%;
}
.to-right{
	padding: 30rpx 65rpx;
	display: flex;
	justify-content: flex-end;
}
.change-status-btn{
	width: 82rpx;
	height: 82rpx;
	border-radius: 50%;
	background-color: #7eb229;
	font-size: 26rpx;
	color: #fff;
	text-align: center;
	line-height: 82rpx;
}